<section>

    <article class="jumbotron">
        <h1>Order Burger! </h1>
        <p>Enter your master burger creation in the text box below</p>
        <br>
        <h2>Create Burger</h2>
        <panel>
            <form class="create-form">
                <article class="form-group">
                    <label for="newburger">Order Burger</label>
                    <input type="text" id="newburger" name="burger"> 


                    <button type="submit" class="btn btn-success" id="addburger">
                        <span class="createBurger"> Order</span>
                    </button>

                </article>
            </form>
        </panel>
    </article>

    <article class="row">
        <section class="col-sm-6">
            <article class="panel panel-default">
                <section class="panel-heading" id="leftside"><strong>Order Burger</strong>
                    <p>Send order to chef</p>
                </section>

                <div class="panel-body">

                    <ul>
                        {{#each burgers}}
                        {{#unless devoured}}

                        <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
                        <button type="button" class="eatburger btn btn-warning" id="eatbutton" data-id="{{this.id}}"
                            data-newDevoured="{{devour}}"><span class="eatborger">Nom</span></button>
                        <hr>
                        {{/unless}}
                        {{/each}}
                    </ul>

                </div>
            </article>
        </section>

        <section class="col-sm-6">
            <article class="panel panel-default">
                <section class="panel-heading" id="leftside"><strong>Burger Ready</strong>
                    <p>ahhh placeholder</p>
                </section>

                <div class="panel-body">

                    <ul>
                        {{#each burgers}}
                        {{#if devoured}}

                        <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
                        <button type="button" class="trashburger btn btn-danger" id="trashbutton" data-id="{{this.id}}"
                            data-newDevoured="{{devour}}"><span class="fa fa-trash"></span></button>
                        <hr>
                        {{/if}}
                        {{/each}}
                    </ul>

                </div>
            </article>
        </section>




    </article>

</section>